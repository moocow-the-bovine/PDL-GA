## mutate_range() : mutation of interval-data genes
pp_def
('mutate_range',
 Pars => 'genes(G); float+ rate(G); min(G); max(G); [o]mutated(G)',
 Inplace=>['genes'],
 Code =>
('
 loop(G) %{
   if (drand48() < $rate()) {
     $mutated() = $min() + drand48()*($max()-$min());
   } else {
     $mutated() = $genes();
   }
 %}
'),
