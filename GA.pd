## mutate_bool() : logical (boolean) mutation
pp_add_exported('','mutate_bool');
pp_def
('mutate_bool',
 Pars => 'genes(G); float+ rate(G); [o]mutated(G)',
 Inplace=>['genes'],
 Code =>
('
 loop(G) %{
   if (drand48() < $rate()) {
     $mutated() = !$genes();
   } else {
     $mutated() = $genes();
   }
 %}
'),
  Doc =>
  ('Mutate binary-valued (boolean) genes.'),
);


